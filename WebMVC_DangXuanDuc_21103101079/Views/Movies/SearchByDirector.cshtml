@model IEnumerable<WebMVC_DangXuanDuc_21103101079.Models.Movie>

@{
    ViewData["Title"] = "Search Movies by Director";
}

<h1>Tim kiem thao ten tac gia</h1>

<form asp-action="SearchByDirector" method="get" class="mb-4">
    <div class="input-group">
        <input type="text" name="keyword" class="form-control" placeholder="Nhap ten tac gia..." value="@ViewData["CurrentFillter"]"/>
        <button type="submit" class="btn btn-primary">Tim Kiem</button>
        <a asp-action="Index" class="btn btn-primary">Quay lai</a>

    </div>
</form>

@if (Model.Any())
{
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Dao dien</th>
                <th>Ten phim</th>
                <th>Nam phat hanh</th>
                <th>Diem danh gia</th>
                <th>Thao tac</th>
            </tr>

        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Director)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Title)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ReleaseYear)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Rating)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-warning">
        Khon tim thay phim nao cua dao dien nay !
    </div>
}